<h1><%= @cocktail.name %></h1>
<h3>Ingredient list :</h3>
<ul><% @cocktail.doses.each do |dose|  %>
  <li><%= dose.description %> of   <%= dose.ingredient.name %></li>
  <% end %>
</ul>
<%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail) %>
<%= link_to "Delete cocktail", cocktail_dose_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } %>
<%= link_to 'Back to list', cocktails_path %>
